<!DOCTYPE html>
<html>
<head>
    <title>Shoe Gallery</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
    <h1>Shoe Gallery</h1>
    <a href="/add" class="btn btn-primary mb-3">Agregar Imagen</a>
    <div class="row">
        <% images.forEach(image => { %>
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="<%= image.image_path %>" class="card-img-top" alt="<%= image.title %>">
                <div class="card-body">
                    <h5 class="card-title"><%= image.title %></h5>
                    <p class="card-text">Marca: <%= image.brand %></p>
                    <a href="/edit/<%= image.id %>" class="btn btn-warning">Editar</a>
                    <form action="/delete/<%= image.id %>" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>
</body>
</html>
